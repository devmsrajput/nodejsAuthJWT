<%- include('../partials/header.ejs') %>
    <%- include('../partials/navbar.ejs') %>
        <div class="container flex flex-col-reverse md:flex-row justify-between px-5">
            <div class="hero-left md:mt-10 md:col-7">
                <h2 class="ui text-3xl font-sans tracking-wider">Welcome</h2>
                <div class="ui md:mt-10 h-[50vh] w-[80vw] md:w-[90vw] lg:w-[40vw] xl:w-[30vw]">
                    <form action="/login" method="post" class="ui space-y-6">
                        <input
                            class="ui w-[100%] hover:border-blue-800 border-2 border-blue-700 rounded bg-transparent outline-none py-2 px-1"
                            type="text" name="username" placeholder="@username"><br>
                        <input
                            class="ui w-[100%] hover:border-blue-800 border-2 border-blue-700 rounded bg-transparent outline-none py-2 px-1"
                            type="password" name="password" placeholder="Password"><br>
                        <a href="#">Forgot password?</a>
                        <input class="ui cursor-pointer bg-blue-700 px-2 py-1 text-slate-200 rounded mt-2" type="submit"
                            value="Sign in">
                        <p class="ui mt-3 text-red-700 text-base">
                            <%= error %>
                        </p>
                    </form>
                </div>
            </div>
            <div class="hero-right md:col-5">
                <img class="ui xl:w-[30vw] lg:w-[50vw] md:w-[60vw] w-[70%] sm:w-[70%] mx-auto" src="images/login.png"
                    alt="hero-image">
            </div>
        </div>
        <%- include('../partials/footer.ejs') %>