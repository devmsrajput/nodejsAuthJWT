<%- include('../partials/header.ejs') %>
    <div class="container-fluid">
        <div class="header bg-blue-900 py-3 flex">
            <nav class="nav w-full flex justify-between">
                <div class="title pl-5">
                    <h3 class="ui text-2xl text-slate-200 hover:text-slate-300 font-bold cursor-pointer">facebook</h3>
                </div>
                <div class="login">
                    <h3 class="ui mt-1 mr-24 cursor-pointer text-slate-200 hover:text-slate-300">Sign in</h3>
                </div>
            </nav>
        </div>
    </div>
    <div class="container flex flex-col-reverse md:flex-row justify-around px-5">
        <div class="hero-left w-[50vw] md:mt-10 md:col-7">
            <h2 class="ui text-3xl font-sans tracking-wider">Create an account</h2>
            <div class="ui md:mt-10 h-[50vh]">
                <form action="/register" method="post" class="ui space-y-6">
                    <input
                        class="ui w-[100%] hover:border-blue-800 border-2 border-blue-700 rounded bg-transparent outline-none py-2 px-1"
                        type="text" name="name" placeholder="Full name"><br>
                    <input
                        class="ui w-[100%] hover:border-blue-800 border-2 border-blue-700 rounded bg-transparent outline-none py-2 px-1"
                        type="text" name="username" placeholder="@username"><br>
                    <input
                        class="ui w-[100%] hover:border-blue-800 border-2 border-blue-700 rounded bg-transparent outline-none py-2 px-1"
                        type="email" name="email" placeholder="Email"><br>
                    <input
                        class="ui w-[100%] hover:border-blue-800 border-2 border-blue-700 rounded bg-transparent outline-none py-2 px-1"
                        type="password" name="password" placeholder="Password"><br>
                    <input type="checkbox" name="tc"><label class="ui ml-2" for="checkbox">I agree to terms and
                        conditions</label><br>
                    <input class="ui bg-blue-700 px-2 py-1 text-slate-200 rounded mt-2 cursor-pointer" type="submit"
                        value="Sign up">
                    <p class="ui mt-3 text-red-700 text-base">
                        <%= error %>
                    </p>
                </form>
            </div>
        </div>
        <div class="hero-right md:col-5">
            <img class="ui xl:w-[30vw] lg:w-[50vw] md:w-[30vw] w-[70%] sm:w-[50%] mx-auto" src="images/signup.png"
                alt="hero-image">
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>